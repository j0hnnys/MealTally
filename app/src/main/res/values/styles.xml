<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="FormLabelTextView">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MealTypeTextView" parent="AppTheme">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:ems">10</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">3dp</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="FoodCountLabel" parent="AppTheme">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="FoodCountLabelMini" parent="FoodCountLabel">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="FoodCounterButton" parent="FoodCountLabel">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="SplashScreen" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>


</resources>
