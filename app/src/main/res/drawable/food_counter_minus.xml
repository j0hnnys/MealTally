<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="oval">
            <solid android:color="@color/shadowColor"/>
            <padding android:left="1dp"
                     android:right="1dp"
                     android:bottom="1dp"/>
        </shape>
    </item>
    <item>
        <shape android:shape="oval">
            <solid android:color="@color/material_red"/>
            <stroke android:color="@color/material_red"
                    android:width="2dp"/>
            <size android:width="30dp"
                  android:height="30dp"/>
        </shape>
    </item>

    <item android:drawable="@drawable/ic_minus"/>
</layer-list>
